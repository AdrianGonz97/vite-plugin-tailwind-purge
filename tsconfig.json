{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"lib": ["ESNext", "DOM.Iterable"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*"]
}
